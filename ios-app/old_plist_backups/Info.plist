<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Bundle Information -->
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Vaani Banking</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
	<key>CFBundleShortVersionString</key>
	<string>1.0</string>
	<key>CFBundleVersion</key>
	<string>1</string>
	
	<!-- iOS Minimum Version -->
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>MinimumOSVersion</key>
	<string>16.0</string>
	
	<!-- Scene Configuration for SwiftUI -->
	<key>UIApplicationSceneManifest</key>
	<dict>
		<key>UIApplicationSupportsMultipleScenes</key>
		<true/>
		<key>UISceneConfigurations</key>
		<dict/>
	</dict>
	
	<!-- UI Configuration -->
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	<key>UILaunchScreen</key>
	<dict>
		<key>UIImageName</key>
		<string></string>
		<key>UIColorName</key>
		<string></string>
	</dict>
	
	<!-- Device Capabilities -->
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>arm64</string>
	</array>
	
	<!-- Supported Interface Orientations (iPhone) -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	
	<!-- Supported Interface Orientations (iPad) -->
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	
	<!-- Custom URL Scheme for Deep Linking -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLName</key>
			<string>com.vaani.banking</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>vaani</string>
				<string>vaanibanking</string>
			</array>
		</dict>
	</array>
	
	<!-- App Transport Security Settings -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
		<key>NSExceptionDomains</key>
		<dict>
			<!-- Allow localhost for development -->
			<key>localhost</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
				<key>NSIncludesSubdomains</key>
				<true/>
			</dict>
			<!-- Allow 127.0.0.1 for development -->
			<key>127.0.0.1</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
			</dict>
		</dict>
	</dict>
	
	<!-- Privacy Permissions -->
	<key>NSSiriUsageDescription</key>
	<string>Vaani Banking uses Siri to help you check your balance, transfer money, and manage your account with voice commands.</string>
	
	<key>NSMicrophoneUsageDescription</key>
	<string>Vaani Banking needs microphone access for voice commands and voice-based interactions.</string>
	
	<key>NSSpeechRecognitionUsageDescription</key>
	<string>Vaani Banking uses speech recognition to understand your voice commands for banking operations.</string>
	
	<key>NSCameraUsageDescription</key>
	<string>Vaani Banking needs camera access for scanning QR codes and checks.</string>
	
	<key>NSPhotoLibraryUsageDescription</key>
	<string>Vaani Banking needs photo library access to select images for document uploads.</string>
	
	<key>NSFaceIDUsageDescription</key>
	<string>Vaani Banking uses Face ID for secure authentication and transaction approval.</string>
	
	<!-- App Intent Permissions -->
	<key>NSUserActivityTypes</key>
	<array>
		<string>CheckBalanceIntent</string>
		<string>TransferMoneyIntent</string>
		<string>ViewTransactionsIntent</string>
		<string>SetReminderIntent</string>
	</array>
	
	<!-- App Intents (iOS 16+) -->
	<key>NSAppIntentsMetadata</key>
	<dict>
		<key>NSAppIntentsMetadataVersion</key>
		<string>1</string>
	</dict>
	
	<!-- Background Modes (if needed for notifications) -->
	<key>UIBackgroundModes</key>
	<array>
		<string>remote-notification</string>
	</array>
</dict>
</plist>
