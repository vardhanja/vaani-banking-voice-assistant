# Environment Configuration for AI Backend
# Copy this to .env and fill in your values

# LangSmith Configuration
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
# LANGCHAIN_API_KEY=your_langsmith_api_key_here
# LANGCHAIN_PROJECT=vaani-banking-assistant

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b
OLLAMA_FAST_MODEL=llama3.2:3b

# OpenAI Configuration (Cloud alternative to Ollama)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_ENABLED=false

# LLM Provider Selection
# Options: "ollama" (local) or "openai" (cloud)
LLM_PROVIDER=ollama

# LLM Settings
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9
LLM_MAX_TOKENS=512

# Azure TTS Configuration (Optional - falls back to Web Speech API)
# AZURE_TTS_KEY=your_azure_tts_key_here
# AZURE_TTS_REGION=centralindia
# AZURE_TTS_ENABLED=false

# Database Configuration
# DATABASE_URL=postgresql://postgres:password@localhost:5432/vaani_banking
# For development with existing SQLite
DATABASE_URL=sqlite:///./vaani.db

# Redis Configuration
# REDIS_URL=redis://localhost:6379/0

# Vector Database (Qdrant)
# QDRANT_URL=http://localhost:6333
# QDRANT_COLLECTION_NAME=banking_documents

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_RELOAD=true
API_WORKERS=1

# Security
# JWT_SECRET_KEY=your-secret-key-change-this-in-production
# JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=20
RATE_LIMIT_PER_HOUR=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ai_backend.log

# Application Settings
APP_NAME=Vaani Banking AI Assistant
APP_VERSION=1.0.0
ENVIRONMENT=development

#Guardrail settings
ENABLE_INPUT_GUARDRAILS=true
ENABLE_OUTPUT_GUARDRAILS=true
GUARDRAIL_RATE_LIMIT_PER_MINUTE=30
GUARDRAIL_RATE_LIMIT_PER_HOUR=500